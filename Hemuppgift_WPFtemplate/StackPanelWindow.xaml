<Window x:Class="Hemuppgift_WPFtemplate.StackPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hemuppgift_WPFtemplate"
        mc:Ignorable="d"
        Title="StackPanelWindow" Height="Auto" Width="Auto">
    <Grid Grid.Row="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="Boxes" Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top">
            <Rectangle Fill="Red" Width="90" Height="90" Margin="5"/>
            <Rectangle Fill="Orange" Width="80" Height="80" Margin="5"/>
            <Rectangle Fill="Yellow" Width="70" Height="70" Margin="5"/>
            <Rectangle Fill="LightGreen" Width="60" Height="60" Margin="5"/>
            <Rectangle Fill="Green" Width="50" Height="50" Margin="5"/>
            <Rectangle Fill="LightBlue" Width="40" Height="40" Margin="5"/>
            <Rectangle Fill="Blue" Width="30" Height="30" Margin="5"/>
            <Rectangle Fill="Black" Width="20" Height="20" Margin="5"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Width="Auto">
                      
            <RadioButton x:Name="Horisontal1" Content="Horisontal" IsChecked="True" Checked="Horisontal_Checked"/>
            <RadioButton x:Name="Vertical1" Content="Vertical" IsChecked="False" Checked="Vertical_Checked"/>
            
        </StackPanel>

    </Grid>
</Window>
